
page{
	background-color: #f7f7f7;
}
.item-box {
	padding: 20rpx 0;
}
.item {
	padding: 15rpx 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.item .pic {
	width: 140rpx;
	height: 140rpx;
	overflow: hidden;
	border-radius: 20rpx;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	-webkit-box-shadow: 0 0 10rpx 2rpx #eee;
	        box-shadow: 0 0 10rpx 2rpx #eee;
}
.item .pic image {
	width: 100%;
	display: block;
}
.item .con {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-left: 20rpx;
	padding-top: 20rpx;
	position: relative;
}
.con .name,
.con .txt {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 40rpx;
}
.txt {
	border-bottom: 1rpx solid #f5f5f5;
	padding-bottom: 10rpx; 
	line-height: 40rpx;
}
.remark {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	color: #888;
	font-size: 22rpx;
	margin-right: 100rpx;
}
.des {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	font-size: 28rpx;
	margin-right: 20rpx;
}
.list {
	margin: 40rpx 30rpx;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	background-color: #fff;
}
.orderno {
	padding: 20rpx 30rpx 10rpx;
	border-bottom: 1rpx solid #f1f1f1;
	line-height: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 30rpx;
}
.status {
	color: red;
	font-weight: 800;
}
.item-bottom {
	border-top: 1rpx solid #f1f1f1;
	padding: 30rpx;
}
.bottom-btns {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
}
.bottom-btns button {
	height: 50rpx;
	line-height: 50rpx;
	width: 180rpx;
	padding: 0;
}
.null {
	width: 250rpx;
	margin: 320rpx auto;
}
.null image {
	width: 100%;
}

