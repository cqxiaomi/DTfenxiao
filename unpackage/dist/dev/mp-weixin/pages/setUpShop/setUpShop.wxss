
.form {
	margin: 40rpx 30rpx 140rpx;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
	padding: 15rpx;
}
.item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border-bottom: 1rpx solid #f5f5f5;
	padding: 20rpx 0;
	line-height: 50rpx;
	font-size: 30rpx;
}
.item>view:nth-child(1) {
	color: red;
	margin: 0 10rpx;
}
.item>view:nth-child(2) {
	width: 180rpx;
}
.item>view:nth-child(3) {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.item input {
	height: 100%;
}
.photo {
	padding: 20rpx;
}
.photo .con {
	width: 200rpx;
	height: 200rpx;
	border-radius: 10rpx;
	text-align: center;
	margin: 20rpx auto;
	border: 1rpx solid #AAAAAA;
	color: #aaa;
}
.bottom {
	position: fixed;
	width: 100%;
	bottom: 0;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #F23027;
	font-size: 28rpx;
	text-align: center;
	color: #fff;
}
.sex {
	font-size: 36rpx;
	padding-right: 5rpx;
}
.images {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin: 40rpx 0 20rpx;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.images>view {
	width: 200rpx;
	height: 200rpx;
	border-radius: 10rpx;
}
.img-box {
	position: relative;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	background-size: cover;
}
.img-box text {
	font-size: 36rpx;
	position: absolute;
	top: 0;
	right: 0;
	-webkit-transform: translate(50%, -50%);
	        transform: translate(50%, -50%);
}
.upload {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	color: #666;
	font-size: 30rpx;
}

