
image {
	width: 100%;
	display: block;
}
.question {
	margin: 40rpx 30rpx 140rpx;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	padding: 10rpx 30rpx;
}
.ask {
	padding: 20rpx 0 20rpx 50rpx;
	border-bottom: 1rpx solid #f1f1f1;
	position: relative;
}
.answer-con{
	padding-left: 50rpx;
	position: relative;
}
.ask-icon,.answer-icon{
	width: 32rpx;
	position: absolute;
	top: 32rpx;
	left: 0;
}
.ask-top {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 10rpx 0;
	line-height: 36rpx;
}
.ask-title {
	font-weight: 600;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-right: 20rpx;
}
.ask-status1,
.ask-time,
.answer-time {
	color: #888;
}
.ask-time,
.answer-time {
	font-size: 26rpx;
}
.ask-status2 {
	color: red;
}
.answer-avator {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 20rpx;
	overflow: hidden;
}
.answer {
	padding: 20rpx 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: 1rpx solid #f1f1f1;
}
.answer-right {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.answer-right-top {
	line-height: 40rpx;
}
.answer-txt {
	padding-top: 20rpx;
	font-size: 26rpx;
}
.no-border {
	border: 0;
}
.input-box {
	position: fixed;
	bottom: 0;
	height: 100rpx;
	width: 100%;
	background-color: #fff;
	z-index: 100;
	padding: 15rpx 30rpx;
	border-top: 1rpx solid #f1f1f1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.input-box input {
	height: 100%;
	background-color: #f5f5f5;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-right: 20rpx;
	border-radius: 20rpx;
	padding: 0 20rpx;
}
.input-box button {
	width: 180rpx;
	padding: 0;
}

