.form .txt view {
	font-size: 24rpx;
}
.code-btn {
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 24rpx;
	margin: 10rpx 0;
	padding: 0;
	text-align: center;
	color: red;
}
.address-box {
	margin: 40rpx 30rpx 30rpx;
	-webkit-box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
	        box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
	border-radius: 20rpx;
	padding: 30rpx 70rpx 30rpx 90rpx;
	position: relative;
}
.address-box>view {
	line-height: 40rpx;
}
.address-box>text {
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.address-box>.dizhi {
	position: absolute;
	left: 30rpx;
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.address-box>text:nth-child(3) {
	right: 30rpx;
	font-size: 32rpx;
}
.address {
	font-size: 22rpx;
	color: #666;
}
.order,
.order-msg {
	margin: 0 30rpx;
	-webkit-box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
	        box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
	border-radius: 20rpx;
	padding: 30rpx;
	font-size: 30rpx;
}
.order-msg {
	margin-top: 30rpx;
}
.order-msg .msg-item {
	line-height: 60rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.top {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 20rpx 0;
}
.pic {
	width: 140rpx;
	height: 140rpx;
	border-radius: 20rpx;
	overflow: hidden;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	-webkit-box-shadow: 0 0 10rpx 2rpx #eee;
	        box-shadow: 0 0 10rpx 2rpx #eee;
}
.pic image {
	width: 100%;
	display: block;
}
.price-box {
	position: relative;
}
.numbox {
	line-height: 50rpx;
	border: 1rpx solid #ccc;
	border-radius: 8rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 24rpx;
	position: absolute;
	bottom: 0;
	right: 0;
}
.numbox>.btn {
	width: 50rpx;
	text-align: center;
}
.con {
	margin: 0 20rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.con .name {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	line-height: 40rpx;
}
.des {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	font-size: 22rpx;
	color: #888;
	line-height: 40rpx;
}
.price {
	text-align: right;
	line-height: 40rpx;
}
.list {
	margin-top: 20rpx;
}
.item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 70rpx;
	height: 70rpx;
}
.item1 {
	line-height: 70rpx;
	height: 70rpx;
	font-size: 26rpx;
}
.item>view {
	font-size: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.total-msg {
	text-align: right;
	font-size: 26rpx;
	margin-top: 30rpx;
}
.submit {
	text-align: center;
	background-color: red !important;
	color: #fff;
}
.phone-box {
	padding: 30rpx;
}
.phone-box2 {
	width: 80%;
	padding: 30rpx 60rpx;
}
.cart-bottom {
	position: fixed;
	bottom: 0;
	width: 100%;
	border-top: 1rpx solid #f5f5f5;
	line-height: 100rpx;
	height: 100rpx;
	padding: 0 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	text-align: right;
	background-color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}

