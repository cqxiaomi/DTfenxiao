
page {
	background-color: #F7F7F7;
}
.balance-input {
	height: 50rpx;
	margin: 10rpx;
	border: 1rpx solid #ccc;
	padding: 0;
	text-align: center;
	font-size: 26rpx;
	width: 160rpx;
	border-radius: 10rpx;
}
.square {
	padding-right: 5rpx;
	font-size: 34rpx;
}
.underline::after {
	content: '';
	position: absolute;
	width: 100%;
	height: 6rpx;
	background-color: #E50D32;
	left: 0;
	bottom: 0;
}
.tickets {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-bottom: 20rpx;
}
.check{
	position: absolute;
	left: 0;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	font-size: 40rpx;
}
.tic-left {
	width: 35%;
	background-color: #54D3C5;
	height: 180rpx;
	line-height: 180rpx;
	color: #fff;
	font-size: 34rpx;
}
.tic-right {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: left;
	padding: 10rpx 20rpx;
	background-color: #fff;
}
.bottom-scroll {
	height: 800rpx;
}
.model-nav {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding-bottom: 20rpx;
	background-color: #fff;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.model-nav>view {
	width: 300rpx;
	text-align: center;
	line-height: 60rpx;
	position: relative;
}
.cu-dialog.myradius {
	border-top-left-radius: 30rpx !important;
	border-top-right-radius: 30rpx !important;
	overflow: hidden;
}
.model-top {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 60rpx;
	padding: 15rpx 30rpx;
	background-color: #fff;
}
.form {
	text-align: left;
}
.form .input-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin: 30rpx 0;
	border-bottom: 1rpx solid #F1F1F1;
	height: 80rpx;
	line-height: 80rpx;
}
.form .txt {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	color: #888;
}
.input-box text {
	font-size: 40rpx;
}
.input-box ._i {
	font-size: 40rpx;
	color: #888;
}

