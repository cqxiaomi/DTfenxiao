
.title {
	padding: 0 30rpx;
	padding-left: 80rpx;
	position: relative;
	line-height: 100rpx;
}
.title image {
	width: 40rpx;
	position: absolute;
	left: 30rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	height: auto;
}
.money {
	line-height: 80rpx;
}
.zhifu {
	padding: 0 30rpx;
	border-top: 1rpx solid #ddd;
	border-bottom: 1rpx solid #ddd;
	line-height: 80rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.zhifu image {
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	left: 0;
	width: 100%;
	height: auto;
}
.box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 20rpx 30rpx;
	margin-bottom: 20rpx;
	border: 1rpx solid #ddd;
}
.btn {
	width: 540rpx;
	margin: 50rpx auto;
	background-color: #55AFFD;
	line-height: 80rpx;
	text-align: center;
	color: #fff;
	-webkit-box-shadow: 0 3rpx 10rpx 3rpx #ddd;
	        box-shadow: 0 3rpx 10rpx 3rpx #ddd;
}
.red-border {
	background-color: #FFDFDF;
	border-color: red;
}

