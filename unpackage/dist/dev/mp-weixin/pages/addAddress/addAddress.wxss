
.contain {
	margin: 40rpx 30rpx;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
	        box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
	padding: 15rpx 30rpx 30rpx;
}
.item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border-bottom: 1rpx solid #F5F5F5;
	line-height: 45rpx;
	padding: 20rpx 0;
	font-size: 30rpx;
}
.item .txt {
	width: 160rpx;
}
.item .con {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.item .con input {
	width: 100%;
	height: 100%;
}
.checkbox {
	margin-top: 20rpx;
}

