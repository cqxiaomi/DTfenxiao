
.shop-top {
	padding: 15rpx 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.shop-logo {
	width: 140rpx;
	height: 140rpx;
	border-radius: 20rpx;
	overflow: hidden;
	background-position: center;
	background-size: cover;
	-webkit-box-shadow: 0 6rpx 6rpx 0 #ddd;
	        box-shadow: 0 6rpx 6rpx 0 #ddd;
	background-repeat: no-repeat;
}
.shopper-box {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding: 0 20rpx;
}
.btn {
	position: absolute;
	bottom: 20rpx;
	width: 590rpx;
	height: 80rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.btn>button {
	height: 80rpx;
	width: 260rpx;
}
.null {
	width: 250rpx;
	margin: 320rpx auto;
}
.null image {
	width: 100%;
}
.bg {
	width: 690rpx;
	margin: 40rpx 30rpx;
	height: 400rpx;
	border-radius: 20rpx;
	position: fixed;
	background-size: cover;
	overflow: hidden;
	background-repeat: no-repeat;
	background-position: center center;
}
.card {
	width: 650rpx;
	position: fixed;
	top: 320rpx;
	left: 50rpx;
	bottom: 50rpx;
	-webkit-box-shadow: 0 6rpx 6rpx 0 #ddd;
	        box-shadow: 0 6rpx 6rpx 0 #ddd;
	border-radius: 20rpx;
	background-color: #fff;
	padding: 20rpx 0;
}
.avatar {
	-webkit-box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
	        box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
	border-radius: 50%;
	position: absolute;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	background-color: #fff;
}
.avatar-pic {
	width: 180rpx;
	height: 180rpx;
	margin: 8rpx;
	border-radius: 50%;
	background-size: cover;
	background-position: center center;
	overflow: hidden;
	background-repeat: no-repeat;
}
.card .name {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0 30rpx;
	font-size: 30rpx;
}
.card .name view {
	line-height: 80rpx;
	height: 80rpx;
}
.goods {
	padding: 30rpx;
	border-bottom: 2rpx solid #f1f1f1;
	color: #666;
	font-size: 30rpx;
}
.list {
	padding: 15rpx 30rpx;
}
.list-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: 1rpx solid #f8f8f8;
	line-height: 40rpx;
	padding: 20rpx 0;
	font-size: 30rpx;
	color: #666;
}
.list-item>view:nth-child(1) {
	width: 140rpx;
}
.list-item view:nth-child(2) {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.icondadianhua {
	font-size: 28rpx;
}

