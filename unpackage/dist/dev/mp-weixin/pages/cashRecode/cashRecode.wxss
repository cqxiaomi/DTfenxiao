
.top {
	position: fixed;
	width: 100%;
	top: 100rpx;
	z-index: 100;
	min-height: 88rpx;
}
.recode {
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
	margin: 30rpx;
	padding: 30rpx;
}
.recode>view{
	line-height: 50rpx;
}
.item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}

