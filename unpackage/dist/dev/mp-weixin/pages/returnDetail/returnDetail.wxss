
page{
	background-color: #f7f7f7;
}
.order,
.top,
.top2 {
	margin: 40rpx 30rpx;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
	padding: 10rpx 0 30rpx;
	background-color: #fff;
}
.order {
	margin-bottom: 140rpx;
}
.top2 {
	padding: 20rpx 30rpx 30rpx;
}
.top2 .title {
	line-height: 40rpx;
	font-size: 30rpx;
	color: red;
	padding-bottom: 10rpx;
	border-bottom: 1rpx solid #f1f1f1;
	font-weight: 800;
}
.top {
	height: 180rpx;
	text-align: center;
	font-size: 24rpx;
	color: red;
	padding: 30rpx 0 0;
}
.inputbox {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 60rpx;
	padding: 10rpx 0;
	border-bottom: 1rpx solid #f1f1f1;
}
.inputbox input {
	height: 60rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-right: 20rpx;
}
.inputbox-l {
	width: 140rpx;
	margin-right: 20rpx;
}
.inputbox-r,
.select-company {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.order-top {
	line-height: 60rpx;
	padding: 0 30rpx;
	border-bottom: 1rpx solid #f1f1f1;
	font-size: 30rpx;
}
.list-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin: 0;
	padding: 15rpx 30rpx;
	line-height: 40rpx;
	font-size: 30rpx;
}
.list-item .span {
	width: 160rpx;
}
.list-item .span2 {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	overflow: hidden;
}
.reason {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	background-color: #f1f1f1;
	border-radius: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0 20rpx;
}
.photo {
	margin: 15rpx 30rpx 0;
	padding: 20rpx 0 0;
	border-top: 1rpx solid #f1f1f1;
}
.photo .con {
	width: 160rpx;
	height: 160rpx;
	border-radius: 10rpx;
	text-align: center;
	margin: 20rpx auto;
	border: 1rpx solid #AAAAAA;
	color: #aaa;
}
.bottom1 {
	position: fixed;
	width: 100%;
	border: 1rpx solid red;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	bottom: 0;
}
.bottom1>view {
	width: 50%;
	line-height: 90rpx;
	height: 90rpx;
	text-align: center;
}
.reason-box {
	padding: 60rpx 30rpx 30rpx;
	width: 80%;
	position: relative;
}
.box {
	width: 70%;
	padding: 40rpx 30rpx 30rpx;
}
.item-box {
	padding: 20rpx 0;
}
.item {
	padding: 15rpx 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.item .pic {
	width: 140rpx;
	height: 140rpx;
	overflow: hidden;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 0 10rpx 2rpx #eee;
	        box-shadow: 0 0 10rpx 2rpx #eee;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}
.item .pic image {
	width: 100%;
	display: block;
}
.item .con {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-left: 20rpx;
	padding-top: 20rpx;
	position: relative;
}
.con .name,
.con .txt {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 40rpx;
}
.txt {
	border-bottom: 1rpx solid #f5f5f5;
	padding-bottom: 10rpx;
	line-height: 40rpx;
}
.remark {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	color: #888;
	font-size: 22rpx;
	margin-right: 100rpx;
}
.des {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	font-size: 28rpx;
	margin-right: 20rpx;
}

