
.bottom-btns {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	padding: 0 15rpx;
}
.bottom-btns button {
	height: 50rpx;
	line-height: 50rpx;
	width: 180rpx;
	padding: 0;
}
.order {
	margin: 40rpx 30rpx;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
	padding: 10rpx 0;
}
.order-top {
	line-height: 60rpx;
	padding: 0 30rpx;
	border-bottom: 1rpx solid #f1f1f1;
	font-size: 30rpx;
}
.model-box {
	padding: 30rpx 0;
	width: 90%;
	position: relative;
}
.goods_status {
	position: absolute;
	bottom: 0;
	height: 40rpx;
	line-height: 40rpx;
	background-color: red;
	font-size: 24rpx;
	width: 100%;
	text-align: center;
	color: #fff;
}
.checkbox{
	position:relative;
	width: 40rpx;
}
.checkbox text{
	position: absolute;
	top: 50%;
	left: 0;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.btn-group{
	padding: 20rpx 0;
}
.btn-group button {
	height: 60rpx;
	line-height: 60rpx;
	width: 240rpx;
	font-size: 24rpx;
}
.item-box {
	padding: 20rpx 0;
}
.item {
	padding: 15rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.item .pic {
	width: 140rpx;
	height: 140rpx;
	overflow: hidden;
	border-radius: 20rpx;
	position: relative;
	-webkit-box-shadow: 0 0 10rpx 2rpx #eee;
	        box-shadow: 0 0 10rpx 2rpx #eee;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}
.item .pic image {
	width: 100%;
	display: block;
}
.item .con {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-left: 20rpx;
	padding-top: 15rpx;
	position: relative;
}
.con .name {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 40rpx;
}
.remark {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	color: #888;
	font-size: 22rpx;
	margin-right: 160rpx;
	text-align: left;
}
.txt {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: 1rpx solid #f5f5f5;
	padding-bottom: 10rpx; 
	line-height: 40rpx;
}
.des {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	font-size: 28rpx;
	margin-right: 40rpx;
}

