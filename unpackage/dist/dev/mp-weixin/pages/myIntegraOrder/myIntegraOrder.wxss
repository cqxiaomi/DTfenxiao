
.title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	padding: 20rpx 50rpx;
	position: fixed;
	width: 100%;
	top: 0;
	background-color: #fff;
	z-index: 100;
}
.title>view {
	position: relative;
	height: 50rpx;
	line-height: 50rpx;
	padding: 0 10rpx;
}
.under {
	color: red;
	font-weight: 600;
	position: relative;
}
.under::after {
	content: "";
	position: absolute;
	width: 100%;
	bottom: 0;
	left: 0;
	height: 6rpx;
	border-radius: 3rpx;
	background-color: #F7756A;
}
.order-box {
	margin: 100rpx 0 120rpx;
}
.bottom {
	position: fixed;
	width: 100%;
	border: 1rpx solid red;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	bottom: 0;
}
.bottom>view {
	width: 50%;
	line-height: 90rpx;
	height: 90rpx;
	text-align: center;
}
.list {
	margin: 20rpx 30rpx 40rpx;
	padding: 20rpx 0;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}
.orderno {
	padding: 0 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 40rpx;
}
.status {
	color: red;
	font-weight: 600;
}
.item-bottom {
	padding: 30rpx;
	border-top: 1rpx solid #f1f1f1;
}
.bottom-btns {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	margin-top: 30rpx;
}
.bottom-btns button {
	height: 50rpx;
	line-height: 50rpx;
	font-size: 24rpx;
	width: 180rpx;
	padding: 0;
}
.total-msg text {
	font-size: 26rpx;
}
.line-888 {
	color: #888;
}
.item-box {
	padding: 20rpx 0;
}
.item {
	padding: 15rpx 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.item .pic {
	width: 140rpx;
	height: 140rpx;
	overflow: hidden;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 0 10rpx 2rpx #eee;
	        box-shadow: 0 0 10rpx 2rpx #eee;
}
.item .pic image {
	width: 100%;
	display: block;
}
.item .con {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-left: 20rpx;
	padding-top: 20rpx;
	position: relative;
}
.con .name,
.con .txt {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 40rpx;
}
.txt {
	border-bottom: 1rpx solid #f5f5f5;
	padding-bottom: 10rpx;
	line-height: 40rpx;
}
.remark {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	color: #888;
	font-size: 22rpx;
	margin-right: 100rpx;
}
.des {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	font-size: 28rpx;
	margin-right: 20rpx;
}
.null {
	width: 250rpx;
	margin: 320rpx auto;
}
.null image {
	width: 100%;
}
.box {
	width: 70%;
	padding: 40rpx 30rpx 30rpx;
}

