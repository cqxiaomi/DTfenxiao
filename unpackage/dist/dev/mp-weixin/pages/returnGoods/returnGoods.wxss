
.item {
	padding: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.item .pic {
	width: 140rpx;
	height: 140rpx;
	overflow: hidden;
	border-radius: 20rpx;
	position: relative;
	-webkit-box-shadow: 0 0 10rpx 2rpx #eee;
	        box-shadow: 0 0 10rpx 2rpx #eee;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}
.item .pic image {
	width: 100%;
	display: block;
}
.item .con {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-left: 20rpx;
	padding-top: 20rpx;
	position: relative;
}
.con .name,
.con .txt {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 40rpx;
}
.txt {
	border-bottom: 1rpx solid #f5f5f5;
	padding-bottom: 10rpx;
	line-height: 40rpx;
}
.remark {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	color: #888;
	font-size: 22rpx;
	margin-right: 100rpx;
}
.des {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	font-size: 30rpx;
	margin-right: 20rpx;
}
.order {
	margin: 40rpx 30rpx 140rpx;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
	padding: 10rpx 0 30rpx;
}
.order-top {
	line-height: 60rpx;
	padding: 0 30rpx;
	border-bottom: 1rpx solid #f1f1f1;
	font-size: 30rpx;
}
.list-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-bottom: 20rpx;
	padding: 0 30rpx;
	line-height: 60rpx;
	font-size: 30rpx;
}
.list-item .span {
	width: 140rpx;
	margin-right: 20rpx;
}
.reason {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	background-color: #f1f1f1;
	border-radius: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0 20rpx;
}
.textarea{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	line-height: 36rpx;
	height: 108rpx;
}
.photo {
	margin: 30rpx 30rpx 0;
	padding: 20rpx 0 0;
	border-top: 1rpx solid #f1f1f1;
}
.photo .con {
	width: 200rpx;
	height: 200rpx;
	border-radius: 10rpx;
	text-align: center;
	margin: 20rpx auto;
	border: 1rpx solid #AAAAAA;
	color: #aaa;
}
.images {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin: 40rpx 0 20rpx;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.images>view {
	width: 100%;
	height: 300rpx;
	border-radius: 20rpx;
}
.img-box {
	position: relative;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}
.img-box text {
	font-size: 36rpx;
	position: absolute;
	top: 0;
	right: 0;
	-webkit-transform: translate(50%, -50%);
	        transform: translate(50%, -50%);
}
.upload {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	color: #666;
	font-size: 30rpx;
}
.reason-box {
	width: 80%;
	position: relative;
	padding: 20rpx 0 40rpx;
}
.reason-title {
	padding: 20rpx 0;
	border-bottom: 1rpx solid #eee;
}
.reason-con {
	padding: 0 50rpx;
}
.reason-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	line-height: 70rpx;
	border-bottom: 1rpx solid #eee;
}
.reason-btns {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	margin-top: 30rpx;
}
.reason-btns button {
	width: 200rpx;
	padding: 0;
	background-color: red;
}
.numbox {
	line-height: 50rpx;
	border: 1rpx solid #ccc;
	border-radius: 8rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 24rpx;
}
.numbox>.btn {
	width: 50rpx;
	text-align: center;
	font-size: 30rpx;
}

