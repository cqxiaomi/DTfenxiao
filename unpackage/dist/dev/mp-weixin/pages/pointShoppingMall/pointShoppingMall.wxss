
page {
	background-color: #f1f1f1;
}
.price-txt {
	position: absolute;
	width: 100%;
	text-align: center;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	font-weight: 600;
	color: #fff;
}
.goods-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.goods-item {
	width: 370rpx;
	margin-top: 10rpx;
	background-color: #fff;
	padding: 70rpx 50rpx;
}
.goods-item:nth-child(even) {
	margin-left: 10rpx;
}
.goods-pic{
	width: 270rpx;
	height: 270rpx;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	border-radius: 10rpx;
	overflow: hidden;
}
.box {
	background-color: #f5f5f5;
	-webkit-box-shadow: 0 6rpx 6rpx 3rpx #ddd;
	        box-shadow: 0 6rpx 6rpx 3rpx #ddd;
	margin-bottom: 20rpx;
}
.title-con {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.title {
	padding: 0 20rpx 0 70rpx;
	line-height: 80rpx;
	background-color: #fff;
	position: relative;
}
.title image {
	width: 40rpx;
	position: absolute;
	top: 50%;
	left: 20rpx;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.options-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	text-align: center;
	padding: 60rpx 0 40rpx;
}
.options-box image {
	width: 50rpx;
	margin-bottom: 10rpx;
}
.adSwiper {
	border-radius: 20rpx;
	min-height: 200rpx !important;
	overflow: hidden;
}
.top-box {
	background-color: #fff;
	padding: 0 30rpx 40rpx;
	-webkit-box-shadow: 0 6rpx 6rpx 3rpx #ddd;
	        box-shadow: 0 6rpx 6rpx 3rpx #ddd;
	margin-bottom: 20rpx;
}
.top-options {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	line-height: 60rpx;
	padding: 15rpx 0;
}
.top-options>view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.top-options>view>.iconfont{
	padding-right: 8rpx;
	font-size: 40rpx;
	color: red;
}
.notice {
	height: 80rpx;
	line-height: 80rpx;
	background-color: #F93644;
	padding: 0 20rpx;
	padding-left: 70rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	position: relative;
}
.notice-pic {
	width: 50rpx;
	position: absolute;
	top: 50%;
	left: 20rpx;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.swiper {
	position: absolute;
	height: 80rpx;
	top: 0;
	left: 80rpx;
	width: 670rpx;
}
.swiper-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.swiper-txt {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding: 0 15rpx;
	color: #fff;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.goods-name {
	line-height: 40rpx;
	margin-top: 30rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

