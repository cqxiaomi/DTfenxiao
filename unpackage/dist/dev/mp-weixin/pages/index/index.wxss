
.search {
	padding: 20rpx 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	position: fixed;
	width: 100%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	top: 0;
	background-color: #55AFFD;
	z-index: 100;
}
.inputbox {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 70rpx;
	line-height: 70rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	background-color: #fff;
	border-radius: 35rpx;
}
.inputbox input {
	height: 70rpx;
	line-height: 70rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding: 0 30rpx;
}
.goodsList {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin: 60rpx 30rpx 0;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.goods-item {
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
	width: 48%;
	margin-bottom: 60rpx;
	padding-bottom: 20rpx;
	position: relative;
	background-color: #fff;
}
.tip {
	position: absolute;
	width: 20rpx;
	bottom: 26rpx;
	right: 30rpx;
}
.goods-item .pic {
	width: 270rpx;
	height: 270rpx;
	border-radius: 20rpx;
	overflow: hidden;
	position: relative;
	top: -30rpx;
	margin: 0 auto;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	-webkit-box-shadow: 0 0 10rpx 5rpx #eee;
	        box-shadow: 0 0 10rpx 5rpx #eee;
	background-color: #fff;
}
.goods-item .pic image {
	width: 100%;
	display: block;
}
.goods-item .con view {
	width: 270rpx;
	margin: 0 auto;
	position: relative;
	top: -5rpx;
}
.goodsname {
	font-weight: 600;
	font-size: 30rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.card-header,
.storeItem {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around
}
.card-header {
	padding: 20rpx 0;
}
.card-header>view {
	line-height: 60rpx;
	background-color: #F7D5D5;
	border-radius: 30rpx;
	width: 160rpx;
	text-align: center;
	font-weight: 600;
}
.storeItem>view {
	width: 160rpx;
	text-align: center;
	line-height: 40rpx;
	padding: 10rpx 0;
}
.scroll {
	height: 360rpx;
}
.swiper {
	height: 400rpx;
}
image {
	width: 100%;
	display: block;
}
.iconxiaoxi {
	font-size: 44rpx;
}
.iconshezhi {
	font-size: 36rpx;
}
.title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0 15rpx;
	line-height: 80rpx;
	background-color: #f5f5f5;
	margin-bottom: 2rpx;
}
.title .txt {
	font-size: 36rpx;
	font-weight: 800;
	position: relative;
	padding-left: 70rpx;
}
.title .txt image{
	width: 60rpx;
	height: 60rpx;
	position: absolute;
	left: 0;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.newGoods {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin: 10rpx 30rpx;
	padding: 30rpx 20rpx;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
}
.icon {
	width: 60rpx;
	height: 60rpx;
	padding: 10rpx;
	border-radius: 50%;
	background-color: #fff;
	position: absolute;
	top: 0;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	-webkit-box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
}
.icon image {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
}
.hot-name {
	font-size: 30rpx;
	margin: 0 20rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	color: #1b1c20;
	font-weight: 600;
}
.font {
	font-size: 24rpx;
	color: #a69198;
}
.phone-box {
	padding: 30rpx 30rpx 40rpx;
}
.animate {
	top: 0;
}
.sub-item-icon {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
	margin: 0 auto;
	-webkit-box-shadow: 0 0 10rpx 5rpx #eee;
	        box-shadow: 0 0 10rpx 5rpx #eee;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}
.null {
	position: relative;
	top: 100rpx;
	width: 250rpx;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.null image {
	width: 100%;
	display: block;
}

