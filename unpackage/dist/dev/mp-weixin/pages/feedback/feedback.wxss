
.top {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 100;
	min-height: 88rpx;
}
.feedback{
	position:fixed;
	width: 690rpx;
	top: 40rpx;
	bottom: 140rpx;
	left: 30rpx;
	border-radius: 20rpx;	
	-webkit-box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.1);	
	        box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.1);
	padding: 30rpx;
	padding-bottom: 50rpx;
}
.txt{
	width: 100%;
	height: 300rpx;
	resize: none;
}
.txtnum{
	text-align: right;
	color: #aaa;
	line-height: 50rpx;
	font-size: 24rpx;
}
.tel{
	height: 70rpx;
	border-bottom: 1rpx solid #f1f1f1;
	border-top: 1rpx solid #f1f1f1;
}
.image-box{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.image-box>view{
	width: 142rpx;
	height: 142rpx;
	border-radius: 20rpx;
}
.pic{
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0,0,0,0.1);
	        box-shadow: 0 5rpx 10rpx rgba(0,0,0,0.1);
	background-size: cover;
	position: relative;
}
.add-box{
	width: 142rpx;
	height: 142rpx;
	line-height: 142rpx;
	text-align: center;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0,0,0,0.1);
	        box-shadow: 0 5rpx 10rpx rgba(0,0,0,0.1);
}
.del-icon{
	position: absolute;
	top: 0;
	right: 0;
	-webkit-transform: translate(50%,-50%);
	        transform: translate(50%,-50%);
	font-size: 36rpx;
}
.add-icon{
	font-size: 80rpx;
	color: #ccc !important;
}
.font1{
	color: #aaa;
}

