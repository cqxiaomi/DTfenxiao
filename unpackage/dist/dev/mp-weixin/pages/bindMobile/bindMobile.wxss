
.logo {
	text-align: center;
	margin-bottom: 40rpx;
	margin-top: 160rpx;
}
.logo image {
	width: 200rpx;
	margin-bottom: 20rpx;
}
.form {
	width: 660rpx;
	margin: 30rpx auto 0;
}
.form .input-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-bottom: 30rpx;
	border-bottom: 1rpx solid #F1F1F1;
	height: 80rpx;
	line-height: 80rpx;
}
.form .txt {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	color: #888;
}
.input-box text {
	font-size: 40rpx;
}
.input-box ._i {
	font-size: 40rpx;
	color: #888;
}
input {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding: 0 15rpx;
	height: 100%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.form .txt view {
	font-size: 24rpx;
}
.code-btn {
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 24rpx;
	margin: 10rpx 0;
	padding: 0;
	text-align: center;
	color: red;
}
.wx {
	width: 100rpx;
	border-radius: 50%;
	padding: 0;
}
.otherLogin {
	width: 160rpx;
	margin: 60rpx auto 40rpx;
	text-align: center;
	position: relative;
	color: #AAAAAA;
}
.otherLogin::before,
.otherLogin::after {
	position: absolute;
	width: 100%;
	height: 1rpx;
	background-color: #aaa;
	content: '';
	top: 50%;
}
.otherLogin::before {
	left: -180rpx;
}
.otherLogin::after {
	right: -180rpx;
}

