
page{
	background-color: #f5f5f5;
}
.title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	position: fixed;
	width: 100%;
	top: 0;
	background-color: #fff;
	z-index: 100;
	font-size: 32rpx;
	font-weight: 600;
	line-height: 80rpx;
}
.title>view {
	position: relative;
	padding: 0 10rpx;
}
.under {
	color: red;
	font-weight: 600;
	position: relative;
}
.under::after {
	content: "";
	position: absolute;
	width: 100%;
	bottom: 0;
	left: 0;
	height: 6rpx;
	border-radius: 3rpx;
	background-color: #F7756A;
}
.swiper {
	position: fixed;
	top: 100rpx;
	bottom: 0;
	width: 100%;
	height: auto;
}
.article-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding-top: 20rpx;
}
.article-pic {
	border-radius: 20rpx;
	overflow: hidden;
	position: relative;
}
.article-pic>view {
	position: absolute;
	width: 100%;
	top: 50%;
	text-align: center;
	font-weight: 600;
	font-size: 40rpx;
	color: #fff;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	padding: 10rpx;
}
.article-msg {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 24rpx;
	color: #333;
	margin: 10rpx 0 40rpx;
	line-height: 40rpx;
}
.item {
	border-radius: 20rpx;
	-webkit-box-shadow: 0 3rpx 10rpx 0 #ddd;
	        box-shadow: 0 3rpx 10rpx 0 #ddd;
	margin: 0 30rpx 30rpx;
	width: 690rpx;
	line-height: 60rpx;
	padding: 20rpx;
	font-size: 36rpx;
	font-weight: 600;
	background-color: #fff;
}
.null {
	position: fixed;
	top: 200rpx;
	width: 100%;
	text-align: center;
}
.null image {
	width: 250rpx;
	display: inline-block;
}

