
.member {
	margin: 40rpx 30rpx 0;
	-webkit-box-shadow: 0 5rpx 10rpx 5rpx #ddd;
	        box-shadow: 0 5rpx 10rpx 5rpx #ddd;
	border-radius: 20rpx;
	padding: 30rpx 25rpx 40rpx;
}
.top {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 10rpx;
}
.top image {
	width: 140rpx;
	height: 140rpx;
	border-radius: 70rpx;
}
.top .msg {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding: 20rpx 0 10rpx;
	line-height: 45rpx;
	border-bottom: 2rpx solid #f1f1f1;
	margin-left: 20rpx;
}
.top .msg .name {
	font-size: 32rpx;
}
.top .msg .time {
	font-size: 24rpx;
	color: #a1a1a1;
	letter-spacing: 1rpx;
	margin-top: 5rpx;
}
.list .item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border-bottom: 1rpx solid #f5f5f5;
	line-height: 50rpx;
	padding: 10rpx 0;
	font-size: 30rpx;
}
.list .item>view:nth-child(2) {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.list .item .key {
	width: 160rpx;
}
.phone {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.start {
	position: fixed;
	width: 100%;
	bottom: 0;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #F23027;
	font-size: 28rpx;
	text-align: center;
	color: #fff;
}

