
.top {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 100;
	min-height: 88rpx;
}
.list {
	margin: 40rpx 30rpx 0;
	border-radius: 20rpx;
	-webkit-box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
	padding: 15rpx 40rpx 30rpx;
}
.item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: 1rpx solid #f1f1f1;
	line-height: 60rpx;
	padding: 15rpx 0;
	font-size: 30rpx;
}
.item>view:nth-child(1) {
	width: 140rpx;
}
.item .input {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	line-height: 60rpx;
	height: 60rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.item .input input {
	height: 60rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-right: 20rpx;
}

