
page {
	background-color: #f1f1f1;
}
.exchange {
	position: fixed;
	width: 100%;
	bottom: 0;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #F23027;
	font-size: 28rpx;
	text-align: center;
	color: #fff;
}
.con {
	background-color: #fff;
	padding: 30rpx;
	margin-bottom: 200rpx;
}
.title {
	line-height: 60rpx;
}
.txt {
	padding: 0 15rpx 30rpx;
}
.txt>view {
	line-height: 50rpx;
}
.coupon-pic {
	position: relative;
	margin:40rpx 100rpx;
}
.coupon-pic image {
	width: 100%;
	height: auto;
}
.tip {
	position: absolute;
	left: 28rpx;
	top: 20rpx;
	font-weight: 800;
	color: red;
	font-size: 40rpx;
	height: auto;
}
.coupon-txt {
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	width: 100%;
	text-align: center;
	font-size: 36rpx;
	color: #fff;
	text-align: center;
}
.coupon-msg {
	line-height: 60rpx;
	margin: 0 30rpx;
	padding: 30rpx 0;
}

