
.classify-pic {
	width: 120rpx;
	height: 120rpx;
	overflow: hidden;
	border-radius: 10rpx;
	margin: 0 auto;
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
}
.VerticalBox {
	position: fixed;
	top: 110rpx;
	bottom: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
}
.search {
	padding: 20rpx 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	position: fixed;
	width: 100%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	top: 0;
	background-color: #55AFFD;
	z-index: 100;
}
.inputbox {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 70rpx;
	line-height: 70rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	background-color: #fff;
	border-radius: 35rpx;
}
.inputbox input {
	height: 70rpx;
	line-height: 70rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding-left: 30rpx;
}
.VerticalNav.nav {
	width: 200rpx;
	white-space: initial;
	background-color: #f7f7f7;
}
.VerticalNav.nav .cu-item {
	width: 100%;
	text-align: center;
	background-color: #fff;
	margin: 0;
	border: none;
	height: 120rpx;
	line-height: 120rpx;
	position: relative;
	margin-bottom: 2rpx;
}
.VerticalNav.nav .cu-item.cur {
	background-color: #FEF7F8;
	border-bottom-left-radius: 40rpx;
}
.VerticalNav.nav .cu-item.cur::after {
	content: "";
	width: 50rpx;
	height: 8rpx;
	border-radius: 4rpx;
	position: absolute;
	background-color: #F57368;
	left: 0;
	right: 0;
	bottom: 25rpx;
	margin: auto;
}
.VerticalMain {
	background-color: #fff;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	margin: 0 25rpx 40rpx;
}
.list>view {
	width: 155rpx;
}
.list-item {
	padding: 15rpx;
	text-align: center;
	-webkit-box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
	margin: 10rpx 0;
	border-radius: 15rpx;
}
.list-item .name {
	font-size: 24rpx;
	padding-top: 10rpx;
	color: #4b4b4b;
}
.subTitle {
	text-align: center;
	height: 80rpx;
	line-height: 80rpx;
}
.subTitle text {
	position: relative;
	padding: 0 20rpx;
	letter-spacing: 2rpx;
	font-size: 22rpx;
}
.subTitle text::before,
.subTitle text::after {
	content: '';
	width: 30rpx;
	height: 2rpx;
	position: absolute;
	top: 50%;
	margin-top: -1rpx;
	background-color: #383849;
}
.subTitle text::before {
	left: -40rpx;
}
.subTitle text::after {
	right: -40rpx;
}

