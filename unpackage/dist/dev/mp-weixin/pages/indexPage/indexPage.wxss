
.goodsList {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin: 30rpx 30rpx 0;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.goods-item {
	-webkit-box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
	        box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
	width: 335rpx;
	margin-bottom: 30rpx;
	background-color: #fff;
	border-radius: 10rpx;
	overflow: hidden;
}
.goods-item .pic {
	width: 335rpx;
	height: 335rpx;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	position: relative;
}
.goods-item .pic image {
	width: 100%;
	display: block;
}
.goods-item .con {
	padding: 10rpx 20rpx;
}
.goodsname {
	font-weight: 800;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.goods-price {
	position: absolute;
	bottom: 0;
	line-height: 40rpx;
	text-align: center;
	background-color: rgba(0, 0, 0, 0.5);
	color: #fff;
	width: 100%;
	letter-spacing: 1rpx;
}
page {
	background-color: #F1F1F1;
}
.coupons {
	width: 180rpx;
	text-align: center;
	border: 2rpx solid #ccc;
	margin: 0 20rpx;
}
.coupons-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	background-color: #fff;
	padding: 20rpx 30rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.sub-item-icon {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
	margin: 0 auto;
	-webkit-box-shadow: 0 0 10rpx 5rpx #eee;
	        box-shadow: 0 0 10rpx 5rpx #eee;
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}
.nav .cu-item {
	line-height: 80rpx;
	height: 80rpx;
}
.ad-swiper {
	min-height: 120rpx !important;
}
.search {
	/* background-image: linear-gradient(#0C90FF, #55AFFD); */
