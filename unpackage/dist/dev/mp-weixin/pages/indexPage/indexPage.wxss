	padding: 180rpx 0 20rpx;
	/* padding: 20upx 0; */
	position: relative;
	height: 270rpx;
}
.city-box{
	position: absolute;
	bottom: 100rpx;
	left: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 60%;
	line-height: 60rpx;
}
.search-box {
	height: 70rpx;
	line-height: 70rpx;
	background-color: #fff;
	border-radius: 35rpx;
	margin: 0 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.search-l {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding-left: 15rpx;
}
.search-c {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
