	position: relative;
}
.cu-item {
	text-align: center;
}
.shops {
	background-color: #fff;
	border-radius: 30rpx;
	margin: 20rpx 30rpx;
	padding: 20rpx;
	-webkit-box-shadow: 0 0 10rpx 2rpx #eee;
	        box-shadow: 0 0 10rpx 2rpx #eee;
}
.shops-scroll {
	position: fixed;
	bottom: 0;
